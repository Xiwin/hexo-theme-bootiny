<h2 id="title" class="text-center"><%- page.title %></h2>

<div class="d-flex mb-1 mt-3">
  <span class="badge rounded-pill text-bg-primary">
    发布时间：<%= page.date.startOf('day').fromNow(); %>
  </span>

  <span class="badge rounded-pill text-bg-warning">
    更新时间：<%= page.updated.startOf('day').fromNow(); %>
  </span>
</div>

<div class="d-flex mb-3">
  <div class="ms-auto">
    <% page.tags.forEach((post_tag) => { %>
    <span class="badge rounded-pill text-bg-secondary">
      <%= post_tag.name %>
    </span>
    <% }); %>
  </div>
</div>

<div id="post-body" class="post-content">
  <%- page.content %>
</div>

<%- partial('partial/comment') %>

<script>
  $(document).ready(function() {
    const $pageContent = $('.post-content');
    const $images = $pageContent.find('img');

    // 为图片添加 FancyBox 和响应式类
    $images.each(function() {
      const $img = $(this);
      $img.attr('data-fancybox', '');
      $img.addClass('img-fluid');
    });
  });
</script>