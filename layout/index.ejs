<% site.posts.sort('date', 'desc' ).limit(theme.index_max_post).forEach(function(post){ %>
<div class="container border-bottom border-secondry mb-3 position-relative">
  <div class="row row-cols-1 row-cols-md-2">
    <div class="col d-flex justify-content-start">
      <a href="<%- url_for(post.path) %>" class="stretched-link index-title text-truncate">
        <% if (post.title=="" ) { %>
        没有标题
        <% } else { %>
        <%- post.title %>
        <% } %>
      </a>
    </div>
    <div class="col d-flex justify-content-start justify-content-md-end">
      <p class="index-date"><%- full_date(post.date, 'll' ) %></p>
    </div>
  </div>

  <div class="contaienr">
    <p class="text-truncate" style="max-height: 3rem;">
      <%- strip_html(post.more).substring(0,100) %>
    </p>
  </div>
</div>
<% }) %>